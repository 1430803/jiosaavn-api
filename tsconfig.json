{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "lib": ["esnext"],

    /* Bundler mode */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

    /* path aliases */
    // "baseUrl": "./",
    // "paths": {
    //   "@/*": ["src/*"]
    // }
  },
  "include": ["api", "src", "test", ".env"]
}
